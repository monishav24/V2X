# SmartV2X-CP Ultra — Environment Variables
# Copy this to .env and fill in production values

# ── JWT ─────────────────────────────────────────────
JWT_SECRET=smartv2x-ultra-change-this-in-production

# ── Edge RSU Server ─────────────────────────────────
EDGE_HOST=0.0.0.0
EDGE_PORT=8000
EDGE_DEBUG=false

# ── Backend Server ──────────────────────────────────
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8001

# ── Database ────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://smartv2x:smartv2x@localhost:5432/smartv2x_edge

# ── Redis ───────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ── CORS ────────────────────────────────────────────
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ── Rate Limiting ───────────────────────────────────
RATE_LIMIT=100

# ── Logging ─────────────────────────────────────────
LOG_LEVEL=INFO
